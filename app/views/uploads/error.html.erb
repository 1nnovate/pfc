<% @tab = 'accounts' -%>
<% set_page_title = "Automatic Uploader", "Connection Error" %>

<%- content_for :header do -%>
  <style type="text/css">
    div#errorExplanation {width:90%; margin:0 auto 1em; font-size:90%; background: #fff; padding-top: 0}
  </style>
<%- end -%>


<div id="three-col-center">
  <div class="two-column flat" id="upload-account">
    <div class="top"><div class="right"><div class="grip"></div></div></div>
    <div class="middle"><div class="right">
    <div class="content">
      <div class="module-header">
        <h4>Getting Started</h4>
      </div>
      <!-- BEGIN upload index -->
      <div id="upload-index">
        <!-- BEGIN steps -->
        <ul class="upload-steps">
          <li class="off">1. <%= link_to "Find", new_upload_path %> your bank</li>
          <li class="on">2. Connect to your bank</li>
          <li>3. Select your accounts</li>
        </ul>
        <!-- END steps -->

        <div id="color_body">
          <!-- BEGIN help -->
          <div id="help">
             <h6 class="color_title">Other ways to Upload&hellip;</h6>
             <ul >
               <li class="manual"><%= link_to "Manual Uploads", manual_upload_path(:fi => @fi) %></li>
             </ul>
             <h6 class="color_title">Why Wouldn&rsquo;t It Work?</h6>
              <ol class="sidebar_list">
                <li>Typo while entering username/password?</li>
                <li>Bank website unavailable?</li>
              </ol>
          </div>
          <!-- END help -->

          <div id="form_body">
            <h3><%= @fi.name %></h3>

            <%- unless params[:second_try] -%>
            <%= render :partial => "retry_error" %>
            <%- else -%>
            <%= render :partial => "failed_error" %>
            <%- end -%>

          </div><!-- END form_body -->

          <div class="clear">&nbsp;</div>
        </div><!-- END color_body -->
        <div class="clear">&nbsp;</div>
      </div><!-- END upload index -->
    </div>
    </div></div>
    <div class="bottom"><div class="right"></div></div>
    </div>
  </div>
</div>
